
@model RegisterViewModel
@{
    var errMsg = ViewBag.Err;
}

<div class="reg-panel">
    <h2>Register</h2>
    <div asp-validation-summary="All"></div>
    <form method="post" asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="">
        <div>
            @if (!string.IsNullOrEmpty(errMsg))
            {
                @errMsg
            }
        </div>
         
        <div class="input-control">
            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
            <span asp-validation-for="FirstName" style="color:red; font-size:10px;"></span>
        </div>

        <div class="form-group">
            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
            <span asp-validation-for="LastName" style="color:red; font-size:10px;"></span>
        </div>

        <div class="form-group">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
        </div>

        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" style="color:red; font-size:10px;"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" style="color:red; font-size:10px;" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
       
    </form>
</div>


      