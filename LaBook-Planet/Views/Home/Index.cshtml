@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="main-container" style="margin: 20px auto">
    <form method="get" asp-controller="Home" asp-action="Index" id="search-form">
        <div class="control-wrapper">
            <button class="search-btn">Search</button>
            <input asp-for="Search" class="search-input" placeholder="Search" value="@Model.SearchTerm"/>
        </div>
    </form>
</div>
<div class="main-container">
    @if (Model != null && Model.BookDetails != null && Model.BookDetails.Any())
    {
        @foreach (var item in Model.BookDetails)
        {
            <div class="container-items">
                <div class="image-box">
                    <img src="@item.Image" asp-append-version="true" />
                </div>
                <div class="desc-box">
                    <div class="title">Title: @item.Title</div>
                    <div class="author">Author: @item.Author</div>
                    <div class="author">Available copies: @item.AvailableCopies</div>
                </div>
            </div>
        }



    }
    else
    {





        <div style="text-align:center; width:100%;">No record found.</div>
    }

</div>