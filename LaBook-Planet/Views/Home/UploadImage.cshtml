@model UploadImageViewModel
@{
    var errMsg = ViewBag.Err;
    var successMsg = ViewBag.Success;
}

<div class="login-panel">
    <h2>Upload Image</h2>
    <form method="post" asp-action="UploadImage" asp-controller="Home" enctype="multipart/form-data">
        <div style="color:red; font-size:12px;">
            @if (!string.IsNullOrEmpty(errMsg)){
                @errMsg;
            }
            @if (!string.IsNullOrEmpty(successMsg))
            {
                @successMsg
                ;
            }
        </div>

        <div class="input-control">
            <input asp-for="Image" />
        </div>
        <div class="input-control">
            <input asp-for="Foldername" />
        </div>

        <button>Upload</button>
    </form>
</div>